/** Stylus Styles */

// Available variables https://github.com/vuetifyjs/vuetify/blob/master/src/stylus/settings/_variables.styl

@import '../../node_modules/vuetify/src/stylus/settings/_colors'

$theme := {
  primary: $green.darken-2
  accent: $green.accent-2
  secondary: $grey.lighten-1
  info: $blue.lighten-1
  warning: $amber.darken-2
  error: $red.accent-4
  success: $green.lighten-2
}

.scrim
  background:
    linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0),
      rgba(0, 0, 0, 0) 60%,
      rgba(0, 0, 0, 0.8)
    )

#market-card
  min-width: 320px
  margin-bottom: 8px

.directions
  position: absolute
  right: 0
  a
    text-decoration: none

.max-width
  max-width: 235px

.in-season
  width: 100%

@import '../../node_modules/vuetify/src/stylus/main'
